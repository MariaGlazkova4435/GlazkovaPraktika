<Window x:Class="OplataTruda.Descript"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OplataTruda"
        mc:Ignorable="d"
        Title="Описание" Height="400" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Описание действия: " Margin="5" Foreground="Green" FontSize="20"/>
            <TextBox Name="Desc" Height="158" TextWrapping="Wrap" />
            <Button Content="ОК" Width="100" Click="Button_Click"/>
            <Button Content="Отмена" Width="100" Background="LightGreen" Foreground="Green" BorderBrush="Green" BorderThickness="1" Click="Otmena"/>
        </StackPanel>
    </Grid>
</Window>
